{
  "name": "nobrainercpp",
  "displayName": "NBCpp",
  "description": "无需配置一键调试运行vscode的c/cpp文件,裸vscode依然可用,Zero Config C/C++ ,Out-of-the-box C/C++ environment with embedded LLVM. No setup, no brain, no problem. | Author: RealSXB(Nebulazeyv)",
  "version": "1.0.0",
  "publisher": "RealSXB(Nebulazeyv)",
  "icon": "smartstart.png",
  "author": {
    "name": "RealSXB(Nebulazeyv)",
    "url": "https://github.com/realsxb"
  },
  "homepage": "https://github.com/realsxb/nobrainercpp",
  "repository": {
    "type": "git",
    "url": "https://github.com/realsxb/nobrainercpp.git"
  },
  "bugs": {
    "url": "https://github.com/realsxb/nobrainercpp/issues"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Education"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp"
  ],
  "extensionDependencies": [
    "ms-vscode.cpptools"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "my-simple-lldb",
        "label": "My Simple C/C++ Debugger",
        "program": "./lldbv1.0/bin/lldb-dap.exe",
        "windows": {
          "program": "./lldbv1.0/bin/lldb-dap.exe"
        },
        "languages": [
          "c",
          "cpp"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "logFile": {
                "type": "string",
                "description": "调试日志文件路径",
                "default": "${workspaceFolder}/dap-log.txt"
              },
              "program": {
                "type": "string",
                "description": "要调试的可执行文件的绝对路径。",
                "default": "${fileDirname}/${fileBasenameNoExtension}.exe"
              },
              "args": {
                "type": "array",
                "description": "传递给程序的命令行参数。",
                "default": []
              },
              "cwd": {
                "type": "string",
                "description": "程序的工作目录。",
                "default": "${workspaceFolder}"
              },
              "stopAtEntry": {
                "type": "boolean",
                "description": "启动后是否自动暂停在入口处。",
                "default": false
              },
              "env": {
                "type": "object",
                "description": "环境变量。",
                "default": {}
              }
            }
          }
        }
      }
    ],
    "commands": [
      {
        "command": "easycpp.debugC",
        "title": "Debug C (GCC/Clang)"
      },
      {
        "command": "easycpp.debugCpp",
        "title": "Debug C++ (G++/Clang++)"
      },
      {
        "command": "extension.autoDebug",
        "title": "Smart Run C/C++",
        "category": "C/C++",
        "icon": {
          "light": "smartstart.svg",
          "dark": "smartstart.svg"
        }
      }
    ],
    "keybindings": [
      {
        "command": "easycpp.debugC",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "easycpp.debugCpp",
        "key": "ctrl+alt+d",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.autoDebug"
        }
      ],
      "editor/title": [
        {
          "command": "extension.autoDebug",
          "when": "resourceLangId == cpp || resourceLangId == c",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
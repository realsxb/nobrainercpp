{
  "name": "nobrainercpp",
  "displayName": "NoBrainerCpp",
  "publisher": "Nebulazeyv",
  "description": "F5 to debug C/C++. No setup, no brain, no problem.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp"
  ],

  "main": "./out/extension.js",
  "contributes": {
"debuggers": [{
  "type": "cppdbg",
  "label": "Disable CPP Run Button (Dummy)",
  "when": "never",
  "program": "noop"
}]
,
    "commands": [
      {
    "command": "cpptools.BuildAndDebugFile",
    "title": "占位符 - 隐藏调试按钮",
    "category": "C/C++"
  },
  {
    "command": "cpptools.AddDebugConfiguration",
    "title": "占位符 - 隐藏配置按钮",
    "category": "C/C++"
     },
      {
        "command": "easycpp.debugC",
        "title": "Debug C (GCC)"
      },
      {
        "command": "easycpp.debugCpp",
        "title": "Debug C++ (G++)"
      },
      {
        "command": "extension.autoDebug",
        "title": "Smart Run C/C++",
        "category": "C/C++",
        "icon": {
          "light": "smartstart.svg",
          "dark": "smartstart.svg"
        }
      },
      {
        "command": "cpptools.hideButtons",
        "title": "Test Remove C/C++ Buttons"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+nothing",
        "command": "codelens.enable",
        "when": "never"
      },
      {
        "command": "easycpp.debugC",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "easycpp.debugCpp",
        "key": "ctrl+alt+d",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "extension.autoDebug"
        },
        {
          "command": "cpptools.hideButtons",
          "title": "Test Remove C/C++ Buttons"
        }
      ],
      "editor/title": [
     {
      "command": "cpptools.BuildAndDebugFile",
      "when": "never"
    },
    {
      "command": "cpptools.AddDebugConfiguration",
      "when": "never"
    }
      ]
    },
    "extensionDependencies": ["ms-vscode.cpptools"]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
